FROM nvidia/cuda:11.6.1-cudnn8-runtime-ubuntu20.04
LABEL maintainer="Hugging Face"
LABEL repository="diffusers"

ENV DEBIAN_FRONTEND=noninteractive

RUN apt update && \
    apt install -y bash \
                   build-essential \
                   git \
                   git-lfs \
                   curl \
                   ca-certificates \
                   libsndfile1-dev \
                   python3.8 \
                   python3-pip \
                   python3.8-venv \
                   ffmpeg \
                   libsm6 \
                   libxext6 && \
    rm -rf /var/lib/apt/lists

# make sure to use venv
RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# pre-install the heavy dependencies (these can later be overridden by the deps from setup.py)
RUN python3 -m pip install --no-cache-dir --upgrade pip && \
    python3 -m pip install --no-cache-dir \
        torch \
        torchvision \
        torchaudio \
        --extra-index-url https://download.pytorch.org/whl/cu116 && \
    python3 -m pip install --no-cache-dir \
        accelerate \
        datasets \
        hf-doc-builder \
        huggingface-hub \
        librosa \
        modelcards \
        numpy \
        scipy \
        tensorboard \
        triton \
        ninja \
        transformers && \
    python3 -m pip install git+https://github.com/TheLastBen/diffusers@updt && \
    python3 -m pip install bitsandbytes && \
    python3 -m pip install -v -U git+https://github.com/facebookresearch/xformers.git@main#egg=xformers && \
    python3 -m pip install -r https://raw.githubusercontent.com/AUTOMATIC1111/stable-diffusion-webui/master/requirements.txt && \
    python3 -m pip install clip open-clip-torch

RUN cp /usr/local/cuda-11.6/targets/x86_64-linux/lib/libcudart.so.11.0 /usr/local/cuda-11.6/targets/x86_64-linux/lib/libcudart.so

CMD ["/bin/bash"]